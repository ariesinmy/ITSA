#include<stdio.h>

int main()
{
	//1mi = 1.6km
	int mi;
	double km;
	scanf("%d", &mi);
	km = mi * 1.6;
	printf("%.1lf\n", km); //注意用%.1lf (double取後一位小數)
}

//連續輸入版本
